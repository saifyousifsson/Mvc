@model SignUpForm

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


    <div class="medlem d-flex justify-content-center m-8 align-items-center ">
        <div class="container"> 
           <div id="signup">
               <div class="title">
                   <h1>@ViewData["Title"]</h1>
                   <p>Är du  redan medlem: <a asp-action="SignIn">Logga in här</a></p>
               </div>
               <div class="d-flex justify-content-center">
                   <form asp-action="SignUp" asp-route-returnUrl="@Model.ReturnUrl" class="col-8">
                       <div class="row g-3">
                           <div class="col-6">
                               <input asp-for="FirstName" type="text" class="form-control" placeholder="Ange förnamn">
                               <span asp-validation-for="FirstName" class="error form-text text-danger"></span>
                           </div>
                           <div class="col-6 ">
                               <input asp-for="LastName" type="text" class="form-control" placeholder="Ange efternamn">
                               <span asp-validation-for="LastName" class="error"></span>
                           </div>
                           <div class="col-12 ">
                               <input  asp-for="Email" type="text" class="form-control" placeholder="Ange e-postadress">
                               <span asp-validation-for="Email" class="error"></span>
                           </div>
                         
                               <div class="col-6">
                                   <input asp-for="Password"  type="password" class="form-control" placeholder="Ange lösenord">
                                   <span asp-validation-for="Password" class="error"></span>
                               </div>
                               <div class="col-6">
                                   <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Bekräfta lösenord">
                                   <span asp-validation-for="ConfirmPassword" class="error"></span>
                               </div>
                               <div class="col-12 ">
                                <input asp-for="AddressLine" type="text" class="form-control" placeholder="Ange AddressLine">
                                <span asp-validation-for="AddressLine" class="error"></span>
                            </div>
                            <div class="col-6"> 
                                <input asp-for="PostalCode" type="text" class="form-control" placeholder="Ange Postnummer">
                                <span asp-validation-for="PostalCode" class="error"></span>
                            </div>
                            <div class="col-6">
                                <input asp-for="City" type="text"  class="form-control" placeholder="Ange Ort">
                                <span asp-validation-for="City"  class="error"></span>
                         
                              </div>
                      <div class="form-text text-center text-danger mb-3">
                        @Model.ErrorMessage 
                    </div>
                    
                          
                            <div asp-validation-summary="ModelOnly" class="error"></div>
                           <button type="submit" class="btn btn-main">@ViewData["Title"]</button>
                       </div>
                   </form>
               </div>
           </div>
       </div>
   </div>
    <div class="hours mt-5">
