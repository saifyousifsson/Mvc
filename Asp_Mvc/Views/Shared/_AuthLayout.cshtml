<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] ASP.NET MVC </title>
    <script src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
       <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
     <div class="bg-blue-gradient p-0 ">
          <div class="container ">
 
        <div class="header-grid">
            <div id="branding">
                <h1>OmniVus.</h1>
                <p>IT Service & Technology</p>
            </div>
            <nav id="top-menu">
                <a href="mailto:info@domain.com">info@domain.com</a>
                      @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="social">
                            <a  class="nav-link text-dark" asp-controller="Profile" asp-action="Index">@User.FindFirst("DisplayName").Value</a>

                        </div>

                           <div class="social">
                @if(User.IsInRole("admin"))
                {
                   <a asp-controller="Admin" asp-action="Users">Users</a> 
                }

                <a asp-controller="Authentication" asp-action="SignOut">Sign Out</a>
                 </div>   
                    }
                    else
                    {

                        <div class="social">
                            <a href="https://facebook.com">facebook</a>

                        </div>
                    }

            </nav>
           
            <nav id="main-menu">
                <div class="menu-items">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-controller="Services" asp-action="Index">Services</a>
                    <a asp-controller="Contacts" asp-action="Index">Contacts</a>
                
                </div>
                
               @if(SignInManager.IsSignedIn(User))
                {
                    <a asp-controller="Authentication" asp-action="SignOut" class="btn btn-main">Logga ut</a>
                }
                else
                {
                   <a asp-controller="Authentication" asp-action="SignIn" class="btn btn-main">Logga in</a> 
                }        
                </nav>
        </div>
        </div>
    

         </div>

       @RenderBody()
     

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
