@model IEnumerable<Asp_Mvc.Data.ApplicationUserAddress>

@{
    ViewData["Title"] = "Users";
      Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container mt-5">
    <h1>Users</h1>

    <p class="mb-3">
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User.Email)
                </th>
                <th>
                    Address
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address.City)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.AddressLine),   @Html.DisplayFor(modelItem => item.Address.PostalCode)  
                </td>
                   <td>
                    @Html.DisplayFor(modelItem => item.Address.City)
                </td>
                
                <td>
                   
                    <a  asp-controller="Profile" asp-action="Edit">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.User.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.User.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
 
   
   
